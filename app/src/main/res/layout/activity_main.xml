<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/standard_margin">

    <!-- Call Tutor Button -->
    <Button
        android:id="@+id/btn_call_tutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:text="@string/btn_call_tutor" />

    <!-- Find Library Button -->
    <Button
        android:id="@+id/btn_find_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:text="@string/btn_find_library" />

    <!-- TextView to display API result -->
    <TextView
        android:id="@+id/tv_api_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_result_default"
        android:textSize="@dimen/api_result_text_size" />

    <!-- Fragment container for bottom navigation content -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorSurface"
        app:itemIconTint="@color/selector_nav_item_color"
        app:itemTextColor="@color/selector_nav_item_color"
        app:menu="@menu/menu_bottom_nav"
        app:labelVisibilityMode="labeled"
        android:padding="@dimen/small_padding"
        app:itemRippleColor="?attr/colorPrimary" />

</LinearLayout>
